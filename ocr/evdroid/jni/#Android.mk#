# -lz from libpngt, -ljnigraphics from libtess
LOCAL_LDLIBS    += -llog -ldl -lz -ljnigraphics
LOCAL_SHARED_LIBRARIES += libtess liblept

include $(BUILD_SHARED_LIBRARY)

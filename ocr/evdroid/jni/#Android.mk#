
LOCAL_PATH := $(call my-dir)

#opencv
include $(CLEAR_VARS)
OPENCV_LIB_TYPE:=STATIC
OPENCV_PACKAGE_DIR:= ~/dev/OpenCV-android-sdk/sdk
OPENCV_CAMERA_MODULES := off
include $(OPENCV_PACKAGE_DIR)/native/jni/OpenCV.mk

